def palindrome_identifier(word):
    word = word.lower().strip()
    length = len(word)
    first_half = word[:(length//2)]

    if length % 2 == 1:
        second_half = word[:-((length+1)//2):-1]
    else:
        second_half = word[:-(length//2)-1:-1]

    if first_half == second_half:
        is_palindrome = True
    else:
        is_palindrome = False

    return is_palindrome
