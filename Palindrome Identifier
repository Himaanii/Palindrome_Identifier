print("Enter a word")
a = []
r = []
word = input()
l = len(word)

for character in word:
  if character == " ":
    continue
  else:
    a.append(character.lower())
    r.append(character.lower())

r.reverse()

#print(a)
#print(r)

if a == r:
    print("Well done!", word, "is a palindrome.")
else:
    print("Sorry,", word, "isn't a palindrome.")
